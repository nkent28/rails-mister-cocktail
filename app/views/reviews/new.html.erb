<div class="banner2" style="background-image: url(https://images.unsplash.com/photo-1577900258307-26411733b430?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6 my-3">
        <div class="card2" style="width: 28rem, height: 25rem;">
          <div class="search-form box-shadow p-4">
            <div class="text-center">
              <h1>Review</h1>
            </div>
              <%= simple_form_for [ @cocktail, @review ] do |f| %>
                <span class="doses-details"><%= f.input :title %></span>
                <span class="doses-details"><%= f.input :content %></span>
                <span class="doses-details"><%= f.input :rating, label: 'Rating', collection: [1, 2, 3, 4, 5] %></span>
              <div class="text-center">
              <%= f.submit "Submit review", class: "btn btn-danger" %>
              <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
